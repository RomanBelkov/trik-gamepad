<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true"
    android:orientation="horizontal"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/baseControl"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.5" >

        <TextView
            android:id="@+id/tvBaseControl"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/darker_gray"
            android:text="Tap &amp; move finger in this zone to control device movement"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:id="@+id/vCircle1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/middleBlock"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvWheel"
            android:layout_width="fill_parent"
            android:layout_height="20pt"
            android:background="@android:color/darker_gray"
            android:text="Wheel" />

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="5dp" >

            <Button
                android:id="@+id/btnBeep"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Beep" />
        </LinearLayout>

        <ToggleButton
            android:id="@+id/tglConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="ConnectTo"
            android:textOff="Connect..."
            android:textOn="Connected" />
                
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/armControls"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.5" >

        <TextView
            android:id="@+id/tvArmControl"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/darker_gray"
            android:text="Tap &amp; move in this zone to control arm&amp;hand"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:id="@+id/vCircle2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle" />
    </RelativeLayout>

</LinearLayout>