<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".MainActivity" >

    <SeekBar
        android:id="@+id/powerAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />
 
    <TextView
        android:id="@+id/tvControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/powerAll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Direction"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="54dp"
        android:text="Stop!!!" />

    <ToggleButton
        android:id="@+id/tglConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btnStop"
        android:layout_marginRight="72dp"
        android:text="ConnectTo"
        android:textOff="Connect..."
        android:textOn="Connected" />

    <ToggleButton
        android:id="@+id/tglWheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvControl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Wheel"
        android:textOff="Wheel"
        android:textOn="Wheel" />

</RelativeLayout>