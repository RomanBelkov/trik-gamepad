<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true"
    android:orientation="horizontal"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/leftPad"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/darker_gray"
        android:clipChildren="false"
        android:layout_weight="0.5" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Touch &amp; stroke"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:id="@+id/leftPadPointer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/circle" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/middleBlock"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvWheel"
            android:layout_width="fill_parent"
            android:layout_height="18pt"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:text="Wheel" />
        
        <ToggleButton
            android:id="@+id/tglConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:checked="false"
            android:text="ConnectTo"
            android:textOff="Connect..."
            android:textOn="Connected" />
        
         <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
    	
    	    	    	    
    	    </LinearLayout>

                
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rightPad"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.5" 
        android:background="@android:color/darker_gray"
        android:clipChildren="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
            android:text="Touch &amp; stroke"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:id="@+id/rightPadPointer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle" />

    </RelativeLayout>

</LinearLayout>