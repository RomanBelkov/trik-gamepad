<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:keepScreenOn="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    tools:context=".MainActivity">

    <VideoView
        android:id="@+id/video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <LinearLayout
        android:id="@+id/controlsOverlay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <com.trik.gamepad.SquareTouchPadLayout
            android:id="@+id/leftPad"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="0.45"
            android:background="@drawable/oxygen_actions_transform_move_icon" >
        </com.trik.gamepad.SquareTouchPadLayout>

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="0.3in"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="0.1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >
        </LinearLayout>

        <com.trik.gamepad.SquareTouchPadLayout
            android:id="@+id/rightPad"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="0.45"
            android:background="@drawable/oxygen_actions_transform_move_icon" >
        </com.trik.gamepad.SquareTouchPadLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="0.3in"
        android:layout_height="0.3in"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="0dp"
        android:background="@drawable/btn_settings"
        android:focusableInTouchMode="false"
        android:padding="0dp" />

    <ToggleButton
        android:id="@+id/tglWheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:checked="false"
        android:textOff="Wheel"
        android:textOn="Wheel" />

</RelativeLayout>