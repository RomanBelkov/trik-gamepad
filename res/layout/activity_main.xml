<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true"
    tools:context=".MainActivity" >

    <ToggleButton
        android:id="@+id/tglConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:text="ConnectTo"
        android:textOff="Connect..."
        android:textOn="Connected" />

    <RelativeLayout
        android:id="@+id/baseControls"
        android:layout_width="220dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/btnStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:text="Stop" />

        <Button
            android:id="@+id/btnBackward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnStop"
            android:layout_centerHorizontal="true"
            android:ellipsize="none"
            android:singleLine="true"
            android:text="Backward" />

        <Button
            android:id="@+id/btnForward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/btnStop"
            android:layout_centerHorizontal="true"
            android:ellipsize="none"
            android:singleLine="true"
            android:text="Forward" />

        <Button
            android:id="@+id/btnLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btnStop"
            android:ellipsize="none"
            android:singleLine="true"
            android:text="Left" />

        <Button
            android:id="@+id/btnRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btnStop"
            android:ellipsize="none"
            android:singleLine="true"
            android:text="Right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/armControls"
        android:layout_width="240dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/btnAStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:text="Freeze&amp;Hold" />

        <Button
            android:id="@+id/btnALower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnAStop"
            android:layout_centerHorizontal="true"
            android:ellipsize="none"
            android:singleLine="true"
            android:text="Lower" />

        <Button
            android:id="@+id/btnAUpper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/btnAStop"
            android:layout_centerHorizontal="true"
            android:ellipsize="none"
            android:singleLine="true"
            android:text="Upper" />

        <Button
            android:id="@+id/btnATake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btnAStop"
            android:ellipsize="none"
            android:singleLine="true"
            android:text="Take" />

        <Button
            android:id="@+id/btnADrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btnAStop"
            android:ellipsize="none"
            android:singleLine="true"
            android:text="Drop" />
    </RelativeLayout>

</RelativeLayout>