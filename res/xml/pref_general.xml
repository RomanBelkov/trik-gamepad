<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="192.168.1.150"
        android:inputType="text"
        android:key="hostAddress"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Robot IP address" />
    <net.margaritov.preference.colorpicker.ColorPickerPreference
	    android:key="targetColor"
	    android:title="Target Color"
	    android:summary="Choose color for target to follow"
	    android:defaultValue="@color/favouriteBall"     
	    alphaSlider="false"
	/>
</PreferenceScreen>